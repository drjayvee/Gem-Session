<% content_for :title, "Projects" %>

<div class="content">
  <h1>Projects</h1>

  <div id="projects" class="block">
    <% @projects.each do |project| %>
      <div class="box">
        <%= render "preview", project: %>
        <p>
          <%= link_to "Show this project", project %>
        </p>
      </div>
    <% end %>
  </div>

  <%= link_to "New project", new_project_path, class: "button is-primary" %>
</div>
