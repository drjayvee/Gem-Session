<% content_for :title, "New project" %>

<div class="content">
  <h1>New project</h1>

  <div id="new_project">
    <p>Hang in there, Noodle is thinking... 🥁</p>
  </div>

  <% if defined? @streamable %>
    <%= turbo_stream_from @streamable %> <%# CreateProjectJob will broadcast_replace_to %>
  <% else %>
    <%= turbo_frame_tag src: new_project_form_path %>
  <% end %>

  <% unless authenticated? %>
    <p class="mt-4">
      Sounds like fun? Then please <%= link_to "join up", new_user_path %> to start gemming!
    </p>
  <% end %>
</div>
